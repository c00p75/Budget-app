<div id="<%= dom_id category %>" class="border shadow-sm bg-white p-2 d-flex justify-content-between align-items-center my-3 px-3" style="height: 7em">
  <div>
    <img src=<%= category.icon %> alt="category icon" class="category-icon">
  </div>

  <div>
    <strong><%= category.name %></strong>    
  </div>

  <div>
    <strong>
      <%= category.purchases.count > 0 ? category.purchases.count : '$0' %>
    </strong>
  </div>

</div>
