<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "p-4"}) do |f| %>
  <div class="field row">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control border-0 border-bottom my-4" %>
  </div>

  <div class="field row">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control border-0 border-bottom my-4" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field my-4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-dark mb-4" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
